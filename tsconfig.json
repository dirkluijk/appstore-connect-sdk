{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "moduleResolution": "Bundler",
    "rootDir": "./src/",
    "outDir": "./dist/types/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "types": [
      "node"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
}